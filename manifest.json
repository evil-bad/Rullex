{
    "manifest_version": 2,

    "name": "Chrome ruller extension",
    "description": "Make you measurement easy. Beta version",
    "version": "0.0.7",
    "offline_enabled": true,
    "page_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [{
        "run_at": "document_start",
        "matches": [
            "<all_urls>"
        ],
        "css": ["resize.css", "style.css"],
        "scripts": ["jQuery.js", "Jquery-ui.js"]
    }],
    "background": {
        "scripts": ["bootloader.js"]
    },
    "devtools_page": "index.html",
    "permissions": ["background", "tabs", "http://*/", "https://*/", "<all_urls>"],
    "commands": {
        "toggle": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description": "Toggle Ruller"
        }
    }
}