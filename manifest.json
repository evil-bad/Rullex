{
    "manifest_version": 2,

    "name": "Chrom ruller extension",
    "description": "Make you measurement easy",
    "version": "1.0",
    "offline_enabled": true,
    "browser_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "css": ["resize.css", "style.css"],
        "scripts": ["jQuery.js", "Jquery-ui.js"]
    }],
    "background": {
        "scripts": ["bootloader.js"]
    },
    "devtools_page": "index.html",
    "permissions": ["background", "tabs", "notifications", "http://*/", "https://*/"]
}